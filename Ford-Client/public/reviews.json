  import React, { useEffect, useState } from "react";
    import { useAuthState } from "react-firebase-hooks/auth";
    import { useParams } from "react-router-dom";
    import auth from "../../firebase.init";
    import { useForm } from "react-hook-form";
    import { toast } from "react-toastify";
    
    const Purchase = () => {
      const [user] = useAuthState(auth);
      const [order, setOrder] = useState([]);
      const { id } = useParams();
      const { register, handleSubmit, reset } = useForm();
      useEffect(() => {
        const url = `https://salty-fortress-85484.herokuapp.com/products/${id}`;
        fetch(url)
          .then((res) => res.json())
          .then((data) => setOrder(data));
      }, [id]);
      const { name, _id, img, minorder, stock, price } = order;
    
      const handleBoking = (data) => {
        fetch("https://salty-fortress-85484.herokuapp.com/myOrders", {
          method: "POST",
          headers: {
            "content-type": "application/json; charset=UTF-8",
          },
          body: JSON.stringify(data),
        })
          .then((res) => res.json())
          .then((result) => {
            toast.success("Proudct Succesfull Added, Check Collection");
          });
        reset();
      };
    
      return (
        <div className="w-10/12 mx-auto grid grid-cols-1 items-center md:grid-cols-2">
          <form
            className="flex flex-col w-80 mx-auto mt-20 form"
            onSubmit={handleSubmit(handleBoking)}
          >
            <input
              className="rounded input input-bordered border-2 border-primary text-secondary text-lg mb-5"
              placeholder="Enter Your Name"
              {...register("Username", { required: true })}
            />
            <input
              className="rounded input input-bordered border-2 border-primary text-secondary text-lg mb-5"
              value={user.email}
              {...register("email", { required: true })}
            />
            <input
              className="rounded input input-bordered border-2 border-primary text-secondary text-lg mb-5"
              placeholder="Enter Phone Number"
              type="number"
              {...register("Phone", { required: true })}
            />
            <input
              className="rounded input input-bordered border-2 border-primary text-secondary text-lg mb-5"
              type="text"
              value={name}
              readOnly
              {...register("name", { required: true })}
            />
            <input
              className="rounded input input-bordered border-2 border-primary text-secondary text-lg mb-5"
              value={price}
              {...register("price", { required: true })}
            />
          </form>
          <div>
            <img className="w-6/12 rounded-lg mx-auto" src={img} alt="" />
          </div>
        </div>
      );
    };
    
    export default Purchase;
    